    <!-- JavaScript for Button Functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const buttonMappings = {
                'button-basic': 'https://mathewshabo.clickfunnels.com/basic-gateway',
                'button-bronze': 'https://mathewshabo.clickfunnels.com/bronze-gateway',
                'button-gold': 'https://mathewshabo.clickfunnels.com/gold-gateway',
                'button-elite': 'https://mathewshabo.clickfunnels.com/elite-gateway',
                'button-premium': 'https://mathewshabo.clickfunnels.com/premium-gateway'
            };

            Object.keys(buttonMappings).forEach(buttonId => {
                const button = document.getElementById(buttonId);
                if (button) {
                    button.addEventListener('click', function (event) {
                        event.preventDefault();
                        window.open(buttonMappings[buttonId], '_blank');
                    });
                }
            });
        });
    </script>
